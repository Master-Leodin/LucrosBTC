<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorPrimary"> <!-- Cor da onda (verde) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/> <!-- Mesmo raio dos botões -->
            <solid android:color="@android:color/white"/> <!-- Cor máscara (não visível) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/colorPrimary"/> <!-- Borda -->
            <corners android:radius="8dp"/>
            <solid android:color="@android:color/transparent"/> <!-- Fundo transparente -->
        </shape>
    </item>
</ripple>